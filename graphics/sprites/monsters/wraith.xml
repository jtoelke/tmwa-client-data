<?xml version="1.0"?>
<sprite>
	<imageset name="base" src="graphics/sprites/monsters/wraith.png" width="96" height="110"/>

	<action name="stand" imageset="base">
		<animation direction="down">
			<frame index="0" delay="150"/>
			<frame index="1" delay="150"/>
			<frame index="2" delay="150"/>
			<frame index="1" delay="150"/>
		</animation>
		<animation direction="left">
			<frame index="9" delay="150"/>
			<frame index="10" delay="150"/>
			<frame index="11" delay="150"/>
			<frame index="10" delay="150"/>
		</animation>
		<animation direction="up">
			<frame index="18" delay="150"/>
			<frame index="19" delay="150"/>
			<frame index="20" delay="150"/>
			<frame index="19" delay="150"/>
		</animation>
		<animation direction="right">
			<frame index="27" delay="150"/>
			<frame index="28" delay="150"/>
			<frame index="29" delay="150"/>
			<frame index="28" delay="150"/>
		</animation>
	</action>

	<action name="attack" imageset="base">
		<animation direction="down">
			<sequence start="4" end="5" delay="75"/>
			<end />
		</animation>
		<animation direction="left">
			<sequence start="11" end="12" delay="75"/>
			<end />
		</animation>
		<animation direction="up">
			<sequence start="21" end="22" delay="75"/>
			<end />
		</animation>
		<animation direction="right">
			<sequence start="30" end="31" delay="75"/>
			<end />
		</animation>
	</action>

	<action name="dead" imageset="base">
		<animation direction="down">
			<sequence start="5" end="7" delay="250"/>
			<frame index="8" delay="1250"/>
		</animation>
		<animation direction="left">
			<sequence start="14" end="16" delay="250"/>
			<frame index="17" delay="1250"/>
		</animation>
		<animation direction="up">
			<sequence start="23" end="25" delay="250"/>
			<frame index="26" delay="1250"/>
		</animation>
		<animation direction="right">
			<sequence start="32" end="34" delay="250"/>
			<frame index="35" delay="1250"/>
		</animation>
	</action>

</sprite>
