<?xml version="1.0"?>
<sprite>
	<imageset name="base" src="graphics/sprites/monsters/spook.png" width="50" height="64"/>

	<action name="stand" imageset="base">
		<animation direction="down">
			<sequence start="0" end="4" delay="100"/>
		</animation>
		<animation direction="left">
			<sequence start="12" end="16" delay="100"/>
		</animation>
		<animation direction="up">
			<sequence start="24" end="28" delay="100"/>
		</animation>
		<animation direction="right">
			<sequence start="36" end="40" delay="100"/>
		</animation>
	</action>

	<action name="attack" imageset="base">
		<animation direction="down">
			<sequence start="5" end="8" delay="75"/>
		  	<end />
		</animation>
		<animation direction="left">
			<sequence start="17" end="20" delay="75"/>
		  	<end />
		</animation>
		<animation direction="up">
			<sequence start="29" end="32" delay="75"/>
		  	<end />
		</animation>
		<animation direction="right">
			<sequence start="41" end="44" delay="75"/>
		  	<end />
		</animation>
	</action>

	<action name="dead" imageset="base">
		<animation direction="down">
			<frame index="0" delay="250"/>
			<frame index="9" delay="250"/>
			<frame index="10" delay="250"/>
			<frame index="11" delay="1250"/>
		</animation>
		<animation direction="left">
			<frame index="12" delay="250"/>
			<frame index="21" delay="250"/>
			<frame index="22" delay="250"/>
			<frame index="23" delay="1250"/>
		</animation>
		<animation direction="up">
			<frame index="24" delay="250"/>
			<frame index="33" delay="250"/>
			<frame index="34" delay="250"/>
			<frame index="35" delay="1250"/>
		</animation>
		<animation direction="right">
			<frame index="36" delay="250"/>
			<frame index="45" delay="250"/>
			<frame index="46" delay="250"/>
			<frame index="47" delay="1250"/>
		</animation>
	</action>

</sprite>
